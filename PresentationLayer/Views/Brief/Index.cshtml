
@{
    ViewData["Title"] = "Briefs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="py-3" >Proyectos</h1>
<div class="row py-3">
    <div class="col">
        <!-- Solo Admin (RolId=1) y Usuario (RolId=2) pueden crear briefs -->
        <button type="button" class="btn btn-outline-primary" data-bind="click:Agregar, visible: RolId === 1 || RolId === 2">
            <i class="lni lni-circle-plus"></i>
            <span>Agregar Brief</span>
        </button>
    </div>
    <div class="col">
        <input type="text" class="form-control" placeholder="Buscar por nombre..." data-bind="value: filtroNombre, valueUpdate: 'input'">
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha Publicación</th>
                    <th scope="col">Detalles</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: registrosFiltrados">
                <tr>
                    <td data-bind="text: id"></td>
                    <td data-bind="text: nombre"></td>
                    <td data-bind="text: (new Date(fechaEntrega).toISOString().split('T')[0])"></td>
                    <td class="small">
                        <button type="button" class="btn btn-outline-primary" data-bind="click:$root.Editar">
                            <i class="lni lni-pencil"></i>
                            <span>Editar</span>
                        </button>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
<div class="modal fade" id="divEdicion" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <!-- Cambiado a modal-lg para mayor espacio -->
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="ModalLabel">Solicitud Brief</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formBrief">
                    <div class="row g-3">
                        <!-- Estatus Proyecto -->
                        <div class="col-md-6" data-bind="validationElement: EstatusBrief">
                            <label for="estatusProyecto" class="form-label">Estatus Proyecto</label>
                            <select id="estatusProyecto" class="form-control"
                                    data-bind="options: catEstatusBrief, value: EstatusBrief, optionsText: 'descripcion', optionsCaption: 'Seleccione'"></select>
                        </div>

                        <!-- Nombre -->
                        <div class="col-md-6" data-bind="validationElement: nombre">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" id="nombre" class="form-control" maxlength="128" placeholder="Ej: Nombre del Brief" data-bind="value: nombre">
                        </div>

                        <!-- Descripción -->
                        <div class="col-md-12" data-bind="validationElement: descripcion">
                            <label for="descripcion" class="form-label">Descripción (¿Cómo?, ¿Cuándo?, ¿Por qué?)</label>
                            <textarea id="descripcion" class="form-control" rows="4" placeholder="Describe el brief: ¿Cómo se realizará?, ¿Cuándo se ejecutará?, ¿Por qué es importante?" data-bind="value: descripcion"></textarea>
                        </div>

                        <!-- Objetivo -->
                        <div class="col-md-6" data-bind="validationElement: objetivo">
                            <label for="objetivo" class="form-label">Objetivo de Comunicación</label>
                            <input type="text" id="objetivo" class="form-control" maxlength="128" placeholder="Ej: Aumentar ventas" data-bind="value: objetivo">
                        </div>

                        <!-- Objetivo de Negocio -->
                        <div class="col-md-6">
                            <label for="objetivoNegocio" class="form-label">Objetivo de Negocio</label>
                            <input type="text" id="objetivoNegocio" class="form-control" maxlength="128" placeholder="Ej: Incrementar market share" data-bind="value: objetivoNegocio">
                        </div>

                        <!-- Dirigido A -->
                        <div class="col-md-6" data-bind="validationElement: dirigidoA">
                            <label for="dirigidoA" class="form-label">Dirigido A</label>
                            <input type="text" id="dirigidoA" class="form-control" maxlength="128" placeholder="Ej: Público joven" data-bind="value: dirigidoA">
                        </div>

                        <!-- Fecha de Entrega -->
                        <div class="col-md-6" data-bind="validationElement: fechaEntrega">
                            <label for="fechaEntrega" class="form-label">Fecha de Entrega Deseada</label>
                            <input type="date" id="fechaEntrega" class="form-control" data-bind="value: fechaEntrega">
                        </div>

                        <!-- Tipo -->
                        <div class="col-md-6" data-bind="validationElement: TipoBrief">
                            <label for="tipoBrief" class="form-label">Tipo</label>
                            <select id="tipoBrief" class="form-control"
                                    data-bind="options: catTipoBrief, value: TipoBrief, optionsText: 'descripcion', optionsCaption: 'Seleccione'"></select>
                        </div>

                        <!-- Link de Referencia -->
                        <div class="col-md-12" data-bind="validationElement: linksReferencias">
                            <label for="linksReferencias" class="form-label">Link de Referencia</label>
                            <input type="url" id="linksReferencias" class="form-control" maxlength="256" placeholder="Ej: https://example.com" data-bind="value: linksReferencias">
                        </div>

                        <!-- Cargar Documento -->
                        <div class="col-md-12" data-bind="validationElement: cargaArchivo">
                            <label for="cargaArchivo" class="form-label">Cargar Documento</label>
                            <input type="file" accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.png,.mp4,.avi,.mkv" id="cargaArchivo" class="form-control" accept=".pdf,.doc,.docx"
                                   data-bind="event: { change: cargarArchivo }">
                        </div>

                        <!-- Archivo Cargado -->
                        <div class="col-md-12" data-bind="visible: rutaArchivo() && rutaArchivo() !== ''">
                            <label for="archivoCargado" class="form-label">Archivo Cargado</label>
                            <a id="archivoCargado" class="form-control text-truncate"
                               data-bind="attr: { href: '/Brief/DownloadFile?id=' + id() }, text: rutaArchivo" target="_blank">Descargar archivo</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" data-bind="click: Guardar">
                    <i class="lni lni-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>


<style>
    .custom-width {
        max-width: 1200px; /* Puedes definir cualquier ancho aquí */
    }
</style>
@section Scripts {
    <script>
        // Pasar los valores de ViewBag a variables JavaScript
        var RolId = @Html.Raw(ViewBag.RolId);

    </script>
    <script src="~/js/Brief/Brief.js" asp-append-version="true"></script>
   
}
