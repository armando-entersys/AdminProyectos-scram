@{
    ViewData["Title"] = "Alertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Alertas</h1>
<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Fecha</th>
                    <th scope="col">Modulo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Detalles</th>

                </tr>
            </thead>
            <tbody data-bind="foreach: registros">
                <tr>
                    <td data-bind="text: $root.formatearFecha(fechaCreacion)"></td>
                    <td data-bind="text: tipoAlerta.descripcion"></td>
                    <td data-bind="text: nombre"></td>
                    <td data-bind="text: descripcion"></td>
                    <td class="small">
                        <a class="btn btn-outline-primary" data-bind="click:$root.Editar">
                            <i class="lni lni-pencil"></i>
                            <span>Ver</span>
                        </a>

                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>



@section Scripts {

    <script src="~/js/Alertas/Alertas.js" asp-append-version="true"></script>
}