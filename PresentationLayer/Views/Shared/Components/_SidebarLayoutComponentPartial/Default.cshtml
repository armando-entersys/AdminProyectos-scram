                    </li>
                </ul>
            </li>
             --> 

        <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Login")" class="sidebar-link">
                <i class="lni lni-exit"></i>
                <span>Logout</span>
            </a>
                <!-- Imagen -->
                <div class="pt-5">
                    <img src="~/img/logo-blanco.png" style="width:100%; max-width:80px;" />
                </div>
        </div>
    </aside>
</header>