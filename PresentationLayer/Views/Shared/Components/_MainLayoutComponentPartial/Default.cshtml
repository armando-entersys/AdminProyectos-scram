

<div class="top-bar mb-3">
    <!-- Información del usuario -->
    <div class="user-info">
        <h6>
            @{
                string rolNombre = "Usuario";
                if (ViewBag.RolId != null)
                {
                    switch ((int)ViewBag.RolId)
                    {
                        case 1:
                            rolNombre = "Administrador";
                            break;
                        case 2:
                            rolNombre = "Usuario";
                            break;
                        case 3:
                            rolNombre = "Producción";
                            break;
                        default:
                            rolNombre = "Usuario";
                            break;
                    }
                }
            }
            @rolNombre:
        </h6>
        <h1>@ViewBag.Name</h1>
    </div>

    <!-- Botones de acción -->
    <div class="action-buttons">
        <a class="custom-btn" href="~/Brief">
            <i class="lni lni-files"></i>
            <span>Brief</span>
        </a>
        @if (ViewBag.RolId == 1)
        {
            <a class="custom-btn" href="~/Brief/IndexAdmin">
                <i class="lni lni-folder"></i>
                <span>Proyectos</span>
            </a>
        }
        <a class="custom-btn" href="~/Materiales">
            <i class="lni lni-gallery"></i>
            <span>Materiales</span>
        </a>
        <a class="custom-btn" href="~/Calendario">
            <i class="lni lni-calendar"></i>
            <span>Calendario</span>
        </a>
        <a class="custom-btn position-relative @(ViewBag.ConteoAlertas > 0 ? "alerta-activa" : "")" href="~/Alertas">
            <i class="lni lni-alarm"></i>
            <span>Alertas</span>
            @if (ViewBag.ConteoAlertas > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger alerta-badge-animado">
                    @ViewBag.ConteoAlertas
                    <span class="visually-hidden">unread messages</span>
                </span>
            }
        </a>
    </div>

    <!-- Logo -->
    <div class="logo-wrapper">
        <img src="~/img/logo.png" style="width:90%; max-width:150px;" />
    </div>
</div>
